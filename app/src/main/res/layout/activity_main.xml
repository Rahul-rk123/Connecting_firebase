<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/making_template">
    <androidx.cardview.widget.CardView
        android:layout_width="350sp"
        android:layout_height="350sp"
        android:layout_gravity="center"
        android:layout_marginTop="150sp"
        app:cardCornerRadius="10dp"
        android:backgroundTint="#03045e">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up Here"
            android:textStyle="bold"

            android:layout_gravity="center_horizontal"
            android:textColor="#0325FA"
            android:textSize="25dp"
            />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width = "300dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="25sp"
        android:orientation="vertical"
        app:helperText="*Required"
        app:startIconDrawable="@drawable/baseline_person_24"
        app:helperTextTextColor="#fb5607"
        android:background="@drawable/givingcorner"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:id="@+id/ints"
            android:background="@drawable/givingcorner"
            />
    </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width = "300dp"
            android:layout_height="60dp"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="25sp"
            android:orientation="vertical"
            app:helperText="*Required"

            app:startIconDrawable="@drawable/baseline_person_24"
            app:helperTextTextColor="#fb5607"
            android:background="@drawable/givingcorner"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:id="@+id/ints1"
                android:background="@drawable/givingcorner"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width = "300dp"
            android:layout_height="60dp"
            android:layout_marginTop="190sp"
            android:layout_marginLeft="25sp"
            android:orientation="vertical"
            app:helperText="*Required"
            app:startIconDrawable="@drawable/baseline_person_24"
            app:helperTextTextColor="#fb5607"
            android:background="@drawable/givingcorner"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:id="@+id/ints2"
                android:background="@drawable/givingcorner"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:layout_width="100dp"
            android:layout_height="60sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="250sp"
            android:backgroundTint="#099CEC"
            android:text="Sign Up"
            android:id="@+id/button1"
            app:cornerRadius="10sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Already registered Sign In"
            android:textSize="25sp"
            android:textColor="#1976D2"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/signin"
            android:layout_marginTop="150sp"/>
    </androidx.cardview.widget.CardView>

</LinearLayout>